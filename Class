/* класс людей
#include <iostream>
#include <string>
using namespace std;

class Human {
public:
	int age;
	string name;
	int weight;
};


int main() {

	Human firsthuman;
	firsthuman.age = 18;
	firsthuman.name = "taras";
	firsthuman.weight = 70;
	cout << "name: " << firsthuman.name << endl;
	cout << "age: " << firsthuman.age << endl;
	cout << "weight: " << firsthuman.weight << endl;

	cout << "________________________________________" << endl;

	Human secondhuman;
	secondhuman.age = 18;
	secondhuman.name = "oleg";
	secondhuman.weight = 55;

	cout << "name: " << secondhuman.name << endl;
	cout << "age: " << secondhuman.age << endl;
	cout << "weight: " << secondhuman.weight << endl;



	return 0;
}

#include <iostream>
#include <string>
using namespace std;

class Human
{
public:
	int age;
	string name;
	int weight;

	void print()
	{
		cout << "name: " << name << "\n" << "age: " << age << "\n" << "weight: " << weight << endl;


	}
};


int main() {

	Human firsthuman;
	firsthuman.age = 18;
	firsthuman.name = "taras";
	firsthuman.weight = 70;

	firsthuman.print();
	
	



	return 0;
}

//ІНКАПСУЛЯЦІЯ
#include <iostream>
#include <string>
using namespace std;

class coffeegrinder
{
private:
	bool checkvoltage()
	{
		return false;
	}
	
public:
	void start()
	{
		if (checkvoltage())
		{
			cout << "BRRRRRRRRRRRRRRRR" << endl;
		}
		else
		{
			cout << "BEEP BEEP" << endl;
		}
		
	}
	
};


int main() {
	coffeegrinder a;
	a.start();
	

	
	
	



	return 0;
}
